# === API Keys and Tokens ===

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here  # Required: Get from platform.openai.com
OPENAI_MODEL=gpt-4  # Optional: Defaults to gpt-4

# Gmail Configuration
GMAIL_CREDENTIALS_FILE=credentials.json  # Required: OAuth 2.0 credentials from Google Cloud Console
GMAIL_TOKEN_FILE=token.json  # Optional: Token storage location (default: token.json)
MY_EMAIL=your_email@example.com  # Required: Used to skip processing emails from yourself

# Google Drive Configuration
GDRIVE_CREDENTIALS_FILE=gdrive.json  # Required: OAuth 2.0 credentials for Drive API
GDRIVE_TOKEN_FILE=token1.json  #  Token storage location (default: token1.json)
GDRIVE_FOLDER_ID=your_folder_id_here  # Required: Folder where attachments will be uploaded
GOOGLE_SHEETS_CREDENTIALS_FILE=g_sheets.json  # Required: Service account credentials for Sheets
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id  # Required: ID of the tracking spreadsheet
GOOGLE_SHEETS_WORKSHEET_NAME=Invoice  # : Name of the worksheet (default: Invoice)

# Discord Configuration
DISCORD_TOKEN=your_discord_bot_token  # Required if USE_DISCORD_NOTIFIER=true
DISCORD_CHANNEL_ID=your_channel_id  # Required if USE_DISCORD_NOTIFIER=true
APPROVING_TEAM_ROLE_ID=your_role_id  # Required if USE_DISCORD_NOTIFIER=true
USE_DISCORD_NOTIFIER=false  # Optional: Enable Discord integration (default: false)
FALLBACK_CHANNEL_NAME=invoice-approval  # Optional: Fallback when channel ID is not accessible
DISCORD_AUTO_APPROVE_ON_FAILURE=true  # Optional: Auto-approve if Discord fails (default: true)

# Ethereum Configuration
ETHERSCAN_API_KEY=your_etherscan_api_key  # Required for transaction verification

# === Application Settings ===

# Workflow Settings
APPROVAL_SLA_HOURS=24  # Optional: Hours before approval reminder (default: 24)
REMINDER_INTERVAL_HOURS=24  # Optional: Hours between reminders (default: 24)
MAX_REMINDERS=5  # Optional: Maximum number of reminders (default: 5)

